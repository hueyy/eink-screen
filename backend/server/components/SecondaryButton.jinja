{#def hx_put="", hx_post="", hx_include="", hx_on_config_request="", hx_on_confirm="" #}

<button class="bg-gray-300 text-gray-600 py-2 px-4 font-bold cursor-pointer" type="button" {%- if hx_put -%}hx-put="{{ hx_put }}" {%- endif -%}
  {%- if hx_post -%}hx-post="{{ hx_post }}" {%- endif -%} {%- if hx_include -%} hx-include="{{ hx_include }}" {%- endif -%} {%- if hx_on_config_request -%}
  hx-on:htmx:config-request="this.closest('form').classList.remove('htmx-error'); {{ hx_on_config_request }}" {%- endif -%} {%- if hx_on_confirm -%}
  hx-on:htmx:confirm="this.closest('form').classList.remove('htmx-error'); {{ hx_on_confirm }}" {%- endif -%}
  hx-on:htmx:error="this.closest('form').classList.add('htmx-error');" hx-swap="none" hx-encoding="multipart/form-data">
  {{ content }}
</button>