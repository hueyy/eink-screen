{#def hx_put="", hx_include="", hx_on_config_request #}

<button class="bg-indigo-700 text-white py-2 px-4 font-bold cursor-pointer" type="button" {%- if hx_put -%}hx-put="{{ hx_put }}" {%- endif -%}
  {%- if hx_include -%} hx-include="{{ hx_include }}" {%- endif -%} {%- if hx_on_config_request -%} hx-on:htmx:config-request="{{ hx_on_config_request }}"
  {%- endif -%} hx-swap="none">
  {{ content }}
</button>