{# def time_dict, news_items #}

<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>NewsDashboardScreen</title>
    <link rel="stylesheet" href="/static/styles/main.css">
  </head>

  <body>
    <div class="w-screen h-screen flex justify-center items-center font-[Fira_Sans]">
      <main class="w-[800px] h-[480px] border flex">
        <div class="flex flex-col justify-center items-center p-6 w-[30%]">

          <div class="text-6xl font-light">{{time_dict['current_day_of_week']}}</div>
          <div class="text-4xl font-black my-4">{{time_dict['current_time']}}</div>
          <div class="text-2xl">{{time_dict['current_date']}}, {{ time_dict['current_year'] }}</div>
        </div>
        <div class="flex flex-col justify-center p-6 w-[70%] gap-2">
          {% for item in news_items %}
          <div class="text-2xl line-clamp-2">
            {{ item['title'] }}
          </div>
          {% endfor %}

        </div>

    </div>
    </main>
    </div>
  </body>

</html>