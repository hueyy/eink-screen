{# def time_dict, news_items #}

<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>NewsDashboardScreen</title>
    <link rel="stylesheet" href="/static/styles/main.css">
  </head>

  <body>
    <div class="w-screen h-screen flex justify-center items-center font-[Fira_Sans]">
      <main class="w-[800px] h-[480px] border flex flex-col justify-evenly gap-1 py-2 px-6">
        {% for item in news_items %}
        <div class="flex justify-between items-center text-2xl leading-none gap-2">
          <div class="line-clamp-2">
            {{ item['title'] }}
          </div>
          <small>({{ item['timestamp_human'] }})</small>
        </div>
        {% endfor %}
        <div class="flex flex-row justify-between items-center ">
          <div class="text-4xl font-light">{{time_dict['current_day_of_week']}}, {{time_dict['current_date']}}, {{ time_dict['current_year'] }}</div>
          <div class="text-4xl font-black">{{time_dict['current_time']}}</div>
        </div>
    </div>
    </main>
    </div>
  </body>

</html>