{% macro link(href, content) %}
<a class="bg-slate-200 px-4 py-2" href="{{ href }}">
  {{ content }}
</a>
{% endmacro %}

{% macro primary_button(text) %}
<button class="bg-indigo-700 text-white py-2 px-4 font-bold" type="submit">
  {{ text }}
</button>
{% endmacro %}

{% macro secondary_button(text) %}
<button class="bg-gray-300 text-gray-600 py-2 px-4 font-bold" type="submit">
  {{ text }}
</button>
{% endmacro %}